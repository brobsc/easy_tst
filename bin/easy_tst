#!/usr/bin/env python
# coding: utf-8

from __future__ import print_function, unicode_literals

import sys

from easy_tst import easy_watcher, __version__


# Collect args from command line
args = sys.argv

# Define which mode will run
if len(args) > 1:
    if args[1] == '--version':
        print(__version__.__version__)
else:
    easy_watcher.main()
